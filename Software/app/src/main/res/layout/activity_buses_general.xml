<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Busqueda_Buses">


    <androidx.recyclerview.widget.RecyclerView

            android:layout_height="725dp"
            android:layout_width="268dp"
            android:id="@+id/recycleBus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="139dp"
            android:layout_height="731dp"
            android:background="#1E2D3E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/constraintLayout" app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_width="97dp"
                android:layout_height="88dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/imageView"
                app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="TODO"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:text="Buses Sabana"
                android:ems="10"
                android:id="@+id/editText"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.25"
                android:autofillHints=""/>
        <Button
                android:text="Buscar"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:id="@+id/Buscar" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.117"/>
        <Button
                android:text="General"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:id="@+id/General"
                app:layout_constraintTop_toBottomOf="@+id/Buscar" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.4" app:layout_constraintVertical_bias="0.073"/>
        <TextView
                android:text="Regresar"
                android:layout_width="93dp"
                android:layout_height="32dp"
                android:id="@+id/textView"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.854"
                android:textSize="24sp"/>
        <Button
                android:text=""
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:background="@drawable/custom_btnregresar"
                android:id="@+id/regresar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.866"/>
        <Button
                android:text="Crear"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:id="@+id/Crear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.533" android:layout_marginBottom="228dp"
                app:layout_constraintTop_toBottomOf="@+id/General" app:layout_constraintVertical_bias="0.344"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>