<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearTren">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="139dp"
            android:layout_height="731dp"
            android:background="#1E2D3E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/constraintLayout" app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_width="97dp"
                android:layout_height="88dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/imageView"
                app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="TODO"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:text="Tren Sabana"
                android:ems="10"
                android:id="@+id/editText"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.25"
                android:autofillHints=""/>

        <Button
                android:text="General"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:id="@+id/General"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.466" app:layout_constraintVertical_bias="0.887"
                android:layout_marginBottom="416dp" app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:text="Crear"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:id="@+id/Crear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.533" android:layout_marginBottom="228dp"
                app:layout_constraintTop_toBottomOf="@+id/General" app:layout_constraintVertical_bias="0.344"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Spinner
            android:text=""
            android:layout_width="186dp"
            android:layout_height="31dp"
            android:id="@+id/spinnerDestino"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.835" app:layout_constraintVertical_bias="0.157"/>
    <Spinner
            android:text=""
            android:layout_width="186dp"
            android:layout_height="31dp"
            android:id="@+id/spinnerReferencia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.835" app:layout_constraintVertical_bias="0.427"/>
    <Spinner
            android:text=""
            android:layout_width="186dp"
            android:layout_height="31dp"
            android:id="@+id/spinnerAsiento"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.835" app:layout_constraintVertical_bias="0.29"/>
    <TextView
            android:text="Destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.534" app:layout_constraintVertical_bias="0.11"/>
    <TextView
            android:text="Asiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.534" app:layout_constraintVertical_bias="0.238"/>
    <TextView
            android:text="Referencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout" app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintVertical_bias="0.38"/>

    <EditText
            android:id="@+id/nombre_conductor"
            android:layout_width="184dp"
            android:layout_height="32dp"
            android:background="@drawable/edittext_styles"
            android:ems="10"
            android:hint="@string/Nombre_conductor"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.828"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.537"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.533" app:layout_constraintVertical_bias="0.484"/>
    <Button
            android:text="Crear Tren"
            android:background="@drawable/custom_button"
            android:layout_width="110dp"
            android:layout_height="54dp"
            android:id="@+id/crear_tren" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintVertical_bias="0.838"/>
</androidx.constraintlayout.widget.ConstraintLayout>